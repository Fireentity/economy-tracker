<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/category_card_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="General category image"
            android:padding="26dp"
            android:src="@drawable/baseline_stacked_bar_chart_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/category_card_identifier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="Nome categoria"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textColor="?android:attr/textColorSecondary"
            app:layout_constraintBottom_toBottomOf="@id/category_card_image"
            app:layout_constraintLeft_toRightOf="@id/category_card_image"
            app:layout_constraintTop_toTopOf="@id/category_card_image"
            app:layout_constraintVertical_bias="0.5" />

        <ImageButton
            android:id="@+id/view_category_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@android:color/transparent"
            android:padding="24dp"
            android:src="@drawable/baseline_arrow_forward_ios_24"
            app:layout_constraintBottom_toBottomOf="@id/category_card_image"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/category_card_image"
            app:layout_constraintVertical_bias="0.5" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/category_card_divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintBottom_toBottomOf="@id/view_category_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>